{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "lib": ["ES2022"],
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "alwaysStrict": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}